{
  "variables": {
    "version": null
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "https://repo.voidlinux.eu/live/current/void-live-x86_64-20170220.iso",
      "iso_checksum": "eae521df432b6b6a89b9dadd1ae781e73174c270f13805837b00d19c8747a043",
      "iso_checksum_type": "sha256",
      "guest_os_type": "Linux_64",
      "guest_additions_mode": "disable",
      "headless": true,
      "boot_wait": "5s",
      "boot_command": [
        "<enter>"
      ],
      "hard_drive_interface": "sata",
      "disk_size": 12288,
      "ssh_username": "root",
      "ssh_password": "voidlinux",
      "ssh_wait_timeout": "2m",
      "ssh_pty": true,
      "shutdown_command": "sudo poweroff",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "1024"],
        ["modifyvm", "{{ .Name }}", "--cpus", "2"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provisioning/install.sh"
    },
    {
      "type": "file",
      "source": "provisioning/system-setup.sh",
      "destination": "/mnt/system-setup.sh"
    },
    {
      "type": "file",
      "source": "provisioning/files/set-hostname",
      "destination": "/mnt/set-hostname"
    },
    {
      "type": "shell",
      "inline": [
        "chmod +x /mnt/system-setup.sh",
        "chroot /mnt /system-setup.sh",
        "rm /mnt/system-setup.sh"
      ]
    },
    {
      "type": "shell",
      "script": "provisioning/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "vagrantfile_template": "provisioning/Vagrantfile",
        "compression_level": 9,
        "output": "voidlinux-dev-{{ .Provider }}-{{ user `version` }}.box"
      },
      {
        "type": "atlas",
        "artifact": "ndrwdn/voidlinux-dev",
        "artifact_type": "vagrant.box",
        "metadata": {
          "description": "Void Linux Dev Workstation",
          "provider": "virtualbox",
          "version": "{{ user `version` }}"
        }
      }
    ]
  ]
}
